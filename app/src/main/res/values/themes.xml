<resources>
    <!-- Base application theme. -->
    <style name="Theme.Genshin_YuanqinAssistant" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#00FFFFFF</item><!-- 设置状态栏透明-->
        <item name="android:windowTranslucentStatus">false</item><!--可以页面拉伸到状态栏顶部-->
        <item name="android:windowTranslucentNavigation">true</item><!--可以页面拉伸到虚拟按键底部-->


    </style>
</resources>